#!/bin/sh /etc/rc.common

START=99
STOP=15

CONFIG=passwall2
APP_FILE=/usr/share/${CONFIG}/app.sh
LOCK_FILE_DIR=/var/lock
LOCK_FILE=${LOCK_FILE_DIR}/${CONFIG}.lock

set_lock() {
	[ ! -d "$LOCK_FILE_DIR" ] && mkdir -p $LOCK_FILE_DIR
	exec 999>"$LOCK_FILE"
	flock -xn 999
}

unset_lock() {
	flock -u 999
	rm -rf "$LOCK_FILE"
}

unlock() {
	failcount=1
	while [ "$failcount" -le 10 ]; do
		if [ -f "$LOCK_FILE" ]; then
			let "failcount++"
			sleep 1s
			[ "$failcount" -ge 10 ] && unset_lock
		else
			break
		fi
	done
}

boot() {
	local delay=$(uci -q get ${CONFIG}.@global_delay[0].start_delay || echo 1)
	if [ "$delay" -gt 0 ]; then
		$APP_FILE echolog "Execution startup delay of $delay seconds before starting!"
		sleep $delay
	fi
	restart
	touch ${LOCK_FILE_DIR}/${CONFIG}_ready.lock
}

start() {
	set_lock
	[ $? == 1 ] && $APP_FILE echolog "The script is already running, does not run repeatedly, exits." && exit 0
	$APP_FILE start
	unset_lock
}

stop() {
	unlock
	set_lock
	[ $? == 1 ] && $APP_FILE echolog "Stop the script and wait for the timeout, do not run repeatedly, exit." && exit 0
	$APP_FILE stop
	unset_lock
}

restart() {
	set_lock
	[ $? == 1 ] && $APP_FILE echolog "The script is already running, does not run repeatedly, exits." && exit 0
	$APP_FILE stop
	$APP_FILE start
	unset_lock
}
